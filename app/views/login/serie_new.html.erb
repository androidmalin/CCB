<div class="content-wrapper" style='background-color: #E3E7EC;' >


<div class="col-md-6" style='margin-top: 20px;'>
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">New serie</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
           <%= form_for @series, :url => "./", :html => {:id => "Blabla"} do |f| %>
              <div class="box-body">
                <div class="form-group">
                  <%= f.text_field :title, :placeholder => "Serie name",  :class=> "form-control" %>
                </div>
                <div class="form-group">
                  <%= f.file_field :image, accept: 'image/png,image/gif,image/jpeg' %>
                </div>
              </div>
              <!-- /.box-body -->

              <div class="box-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            <% end %>
          </div>
          <!-- /.box -->

</div>
            <!-- /.box-body -->
</div>





<% content_for :script_at_bottom do %>

<script type="text/javascript">
	function readURL(input) {

    if (input.files && input.files[0]) {
        var reader = new FileReader();

        reader.onload = function (e) {
            $('#blah').attr('src', e.target.result);
        }

        reader.readAsDataURL(input.files[0]);
    }
}

$("#imgInp").change(function(){
    readURL(this);
});

</script>

<% end %>